<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout

        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="95dp">

        <androidx.cardview.widget.CardView

            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/watchimgview"
            app:cardCornerRadius="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/watchImg"
                android:layout_width="60dp"
                android:scaleType="centerCrop"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher_round"
                ></ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/watchName"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/watchimgview"
            android:text="watchname"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/price"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@+id/watchName"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/watchimgview"
            android:text="price"
            android:textSize="15sp">

        </TextView>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="12sp"
            app:srcCompat="@drawable/trash"
            android:id="@+id/removeFromCartImg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@id/watchName"
            >
        </ImageButton>

        <TextView
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/watchimgview"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@id/watchimgview"
            android:text="quantity"
            android:textColor="#CDC7C7">

        </TextView>

        >
    </RelativeLayout>




</RelativeLayout>